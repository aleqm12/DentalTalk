<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Perfil.PerfilVisitado">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:text="@string/PV_Perfil_TXT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--Imagen de perfil del usuario-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/imagen_usuario_visitado"/>

        <!--Nombre de usuario-->
        <TextView
            android:id="@+id/PV_NombreU"
            android:text="@string/PV_NombreU"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--Email de usuario-->
        <TextView
            android:id="@+id/PV_EmailU"
            android:text="@string/PV_EmailU"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/PV_uid_TXT"
            android:layout_marginTop="3dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--Uid de usuario-->
        <TextView
            android:id="@+id/PV_uid"
            android:text="@string/PV_uid"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:background="@color/primaryblue"
            android:layout_marginTop="10dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>